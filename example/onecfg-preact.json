{
  "patches": {
    "tsconfig.base.json": [
      {
        "value": {
          "compilerOptions": {"jsx": "react-jsx", "jsxImportSource": "preact"}
        }
      }
    ],
    ".swcrc": [
      {
        "value": {
          "jsc": {
            "transform": {
              "react": {"importSource": "preact", "runtime": "automatic"}
            }
          }
        }
      }
    ]
  }
}
