{
  "defines": {
    "rustfmt.toml": {"format": "toml"}
  },
  "patches": {
    "rustfmt.toml": [
      {
        "value": {"max_width": 120, "use_small_heuristics": "max"}
      }
    ],
    ".editorconfig": [
      {
        "value": {
          "*.rs": {"indent_size": 4}
        }
      }
    ],
    ".gitignore": [
      {
        "value": ["/rustfmt.toml"]
      }
    ],
    ".vscode/settings.json": [
      {
        "value": {"editor.formatOnSave": true, "editor.rulers": [120]}
      }
    ]
  }
}
