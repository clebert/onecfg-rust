{
  "defines": {
    "jest.config.json": {"format": "json"}
  },
  "patches": {
    "jest.config.json": [
      {
        "value": {
          "testMatch": ["**/src/**/*.test.{js,jsx}"],
          "clearMocks": true,
          "restoreMocks": true,
          "collectCoverage": true,
          "coverageThreshold": {
            "global": {
              "branches": 100,
              "functions": 100,
              "lines": 100,
              "statements": 100
            }
          }
        }
      }
    ],
    ".gitignore": [
      {
        "value": ["/coverage"]
      }
    ],
    ".prettierignore": [
      {
        "value": ["/coverage", "/jest.config.json"]
      }
    ]
  }
}
